doctype html
html
 head
  title Tasks   
 body
  h1= task.description
  p= task.createAt
  p
    strong Autor:
    span= task.user.email
  ul
    each category in task.categories
      li=category.title
  form(action=`/tasks/${ task.id }?_method=DELETE` method="POST")
    input(type="submit" value="Delete")